#! /usr/bin/env bash

blk='tput setaf 0'
red='tput setaf 1'
grn='tput setaf 2'
ylw='tput setaf 3'
blu='tput setaf 4'
mag='tput setaf 5'
cya='tput setaf 6'
wht='tput setaf 7'
brblk='tput setaf 8'
brred='tput setaf 9'
brgrn='tput setaf 10'
brylw='tput setaf 11'
brblu='tput setaf 12'
brmag='tput setaf 13'
brcya='tput setaf 14'
brwht='tput setaf 15'

reset='tput sgr0'

printf "\\n"
printf "       Normal Colours            Bright Colours\\n"
printf "       ==============            ==============\\n"
printf "00  "; $blk; printf "********************"; $reset; printf "  08  "; $brblk; printf "********************"; $reset; printf "  Black\\n"
printf "01  "; $red; printf "********************"; $reset; printf "  09  "; $brred; printf "********************"; $reset; printf "  Red\\n"
printf "02  "; $grn; printf "********************"; $reset; printf "  10  "; $brgrn; printf "********************"; $reset; printf "  Green\\n"
printf "03  "; $ylw; printf "********************"; $reset; printf "  11  "; $brylw; printf "********************"; $reset; printf "  Yellow\\n"
printf "04  "; $blu; printf "********************"; $reset; printf "  12  "; $brblu; printf "********************"; $reset; printf "  Blue\\n"
printf "05  "; $mag; printf "********************"; $reset; printf "  13  "; $brmag; printf "********************"; $reset; printf "  Magenta\\n"
printf "06  "; $cya; printf "********************"; $reset; printf "  14  "; $brcya; printf "********************"; $reset; printf "  Cyan\\n"
printf "07  "; $wht; printf "********************"; $reset; printf "  15  "; $brwht; printf "********************"; $reset; printf "  White\\n\\n"

