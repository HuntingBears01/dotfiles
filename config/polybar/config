; -----------------------------------------------------------------------------
;   Modules
; -----------------------------------------------------------------------------

[module/alsa]
type                                = internal/alsa

format-volume                       = <label-volume>
format-volume-prefix                = VOL
format-volume-prefix-font           = 3
format-volume-prefix-padding        = 2

format-muted                        = MUTE
format-muted-prefix                 = VOL
format-muted-prefix-font            = 3
format-muted-prefix-padding         = 2

label                               = %percentage%%


[module/battery]
type                                = internal/battery

battery                             = BAT0
adapter                             = AC
full-at                             = 98

format-charging                     = <label-charging>
format-charging-prefix              = AC
format-charging-prefix-font         = 3
format-charging-prefix-padding      = 2

format-discharging                  = <label-discharging>
format-discharging-prefix           = BAT
format-discharging-prefix-font      = 3
format-discharging-prefix-padding   = 2

format-full                         = 100%
format-full-prefix                  = AC
format-full-prefix-font             = 3
format-full-prefix-padding          = 2

label                               = %percentage%%


[module/cpu]
type                                = internal/cpu

interval                            = 2

format                              = <label>
format-prefix                       = CPU
format-prefix-font                  = 3
format-prefix-padding               = 2

label                               = %percentage%%


[module/date]
type                                = internal/date

interval                            = 5
date                                = "%A, %d %B"

label                               = %date%


[module/time]
type                                = internal/date

interval                            = 5
time                                = %H:%M

label                               = %time%


[module/filesystem]
type                                = internal/fs

interval                            = 25
mount-0                             = /

format-mounted                      = <label-mounted>
format-mounted-prefix               = SSD
format-mounted-prefix-font          = 3
format-mounted-prefix-padding       = 2

label-mounted                       = %free%


[module/i3]
type                                = internal/i3

